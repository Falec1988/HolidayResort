@using System.Globalization
@model Accommodation

<div class="row">
    <div class="col-12 col-md-5">
        <img src="@Model.ImageUrl" style="border-radius:10px;" width="100%" />
    </div>
    <div class="col-12 col-md-7">
        <div class="row p-2">
            <div class="col-12">
                <p class="card-title text-warning" style="font-size:xx-large">@Model.Name</p>
                <p class="card-text" style="font-size:large">
                    @Html.Raw(Model.Description)
                </p>
                @if (Model.AccommodationEquipment is not null && Model.AccommodationEquipment.Count() > 0)
                {
                    <p class="h5 text-white">Oprema</p>
                    <ul>
                        @foreach (var equipment in Model.AccommodationEquipment)
                        {
                            <li>@equipment.Name</li>
                        }
                    </ul>
                }
            </div>
        </div>
        <div class="row col-12">
            <span class="text-end p-0 pt-3 m-0">
                <span class="float-right">Kapacitet : @Model.Capacity</span><br />
                <span class="float-right pt-1">Kvadratura : @Model.SquareMeter m²</span><br />
                <p class="text-warning font-weight-bold pt-1">
                    <span style=" #ff6a00">
                        @Model.Price.ToString("C", CultureInfo.CreateSpecificCulture("fr-FR")) / po noćenju
                    </span>
                </p>
            </span>
        </div>
    </div>
</div>